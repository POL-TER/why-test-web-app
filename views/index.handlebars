<form action="/name" method="post">
  <input id="name" name="name">
  <input id="submit-name" type="submit">
</form>

<form action="/cake-type" method="post">
  <label for="whole-wheat">Whole wheat</label>
  <input type="radio" name="cakeType" id="whole-wheat" value="Whole wheat">

  <input id="submit-cake-type" type="submit">
</form>

<p id="deliver-to">
  {{order.name}}

  {{#if errors.name}}
    <span>{{errors.name}}</span>
  {{/if}}
</p>

<p id="cake-type">
  {{order.cakeType}}
</p>
